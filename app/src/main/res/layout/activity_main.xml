<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1280"
    android:orientation="vertical"
    android:background="@drawable/background4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1144"
        android:background="#FFF">

        <org.opencv.android.JavaCameraView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/activity_surface_view" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="136">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28">
        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"/>

            <ImageButton
                android:id="@+id/shop_list_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="247"
                android:src="@drawable/shop_list"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="onClick_shop_list"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="22"/>

            <ImageButton
                android:id="@+id/capture_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:src="@drawable/capture"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="onClick_course_ask"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="22"/>

            <ImageButton
                android:id="@+id/course_ask_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="272"
                android:src="@drawable/course_ask"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="onClick_course_ask"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28">
        </Space>


    </LinearLayout>


</LinearLayout>
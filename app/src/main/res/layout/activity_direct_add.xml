<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/direct_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1280"
    android:background="@drawable/background4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="49">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="51"
        android:weightSum="720">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36"/>

        <EditText
            android:id="@+id/store_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="550"
            android:background="#fff"
            android:textColor="#000"
            android:hint="장소 이름을 입력하세요."
            android:textColorHint="#888"
            android:paddingLeft="5dp">
        </EditText>

        <Button
            android:id="@+id/search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="#fff"
            android:text="검색"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:onClick="onClick_search_click"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="46"
        android:weightSum="720">

        <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="36"/>

        <Spinner
            android:id="@+id/store_spn"
            android:entries="@array/store_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="124"
            android:gravity="right"
            android:background="#fff">

        </Spinner>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="32"/>

        <Spinner
            android:id="@+id/sort_spn"
            android:entries="@array/sort_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="124"
            android:gravity="right"
            android:background="#fff">

        </Spinner>

        <TextView
            android:id="@+id/sort_test_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="hi"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/store_test_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="hi"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="31"></LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/store_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1077"
        android:background="#fff">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>